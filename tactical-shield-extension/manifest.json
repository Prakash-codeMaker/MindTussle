{
    "manifest_version": 3,
    "name": "MindTussle Tactical Shield",
    "version": "1.0",
    "description": "Companion shield for MindTussle. Automatically blurs distracting tabs when you drift.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}